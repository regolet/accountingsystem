# NextAuth Configuration (Required)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/accounting_db
DIRECT_URL=postgresql://username:password@localhost:5432/accounting_db

# Email Configuration (Required for sending invoices)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
COMPANY_NAME=accountingpro

